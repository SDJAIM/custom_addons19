<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================================== -->
    <!-- Telemedicine Session Form View -->
    <!-- ========================================== -->
    <record id="view_clinic_telemed_session_form" model="ir.ui.view">
        <field name="name">clinic.telemed.session.form</field>
        <field name="model">clinic.telemed.session</field>
        <field name="arch" type="xml">
            <form string="Telemedicine Session">
                <header>
                    <!-- Workflow Buttons -->
                    <button name="action_create_video_channel"
                            string="Create Video Channel"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'draft' or discuss_channel_id"
                            groups="clinic_staff.group_clinic_staff_user"/>

                    <button name="action_join_call"
                            string="üé• Join Video Call"
                            type="object"
                            class="oe_highlight"
                            invisible="state in ['draft', 'completed', 'cancelled']"
                            groups="clinic_staff.group_clinic_staff_user"/>

                    <button name="action_send_invitation"
                            string="‚úâ Send Invitation"
                            type="object"
                            invisible="not discuss_channel_id or invitation_sent"
                            groups="clinic_staff.group_clinic_staff_user"/>

                    <button name="action_end_session"
                            string="Complete Session"
                            type="object"
                            invisible="state not in ['waiting', 'in_progress']"
                            groups="clinic_staff.group_clinic_staff_user"/>

                    <button name="action_cancel_session"
                            string="Cancel Session"
                            type="object"
                            invisible="state in ['completed', 'cancelled']"
                            confirm="Are you sure you want to cancel this session?"
                            groups="clinic_staff.group_clinic_staff_user"/>

                    <!-- Status Bar -->
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,scheduled,waiting,in_progress,completed"/>
                </header>

                <sheet>
                    <!-- Button Box -->
                    <div name="button_box" class="oe_button_box">
                        <button name="action_join_call"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-video-camera"
                                invisible="state in ['draft', 'cancelled', 'completed'] or not discuss_channel_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Join Video Call</span>
                            </div>
                        </button>

                        <button name="%(discuss.discuss_channel_action)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-comments"
                                invisible="not discuss_channel_id"
                                context="{'search_default_id': discuss_channel_id}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Open Channel</span>
                            </div>
                        </button>
                    </div>

                    <!-- Alerts -->
                    <div class="alert alert-info" role="alert"
                         invisible="state != 'draft' or discuss_channel_id">
                        <strong>üìù Next Step:</strong>
                        Click "Create Video Channel" to set up the telemedicine consultation.
                    </div>

                    <div class="alert alert-success" role="alert"
                         invisible="state not in ['waiting', 'in_progress']">
                        <strong>‚úÖ Session Active</strong>
                        <div>
                            <span invisible="not patient_joined">‚úì Patient Joined</span>
                            <span invisible="patient_joined">‚è≥ Waiting for Patient</span>
                            ‚Ä¢
                            <span invisible="not doctor_joined">‚úì Doctor Joined</span>
                            <span invisible="doctor_joined">‚è≥ Waiting for Doctor</span>
                        </div>
                    </div>

                    <!-- Title -->
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group name="session_info" string="Session Information">
                            <field name="appointment_id"
                                   options="{'no_create': True, 'no_create_edit': True}"
                                   readonly="state != 'draft'"/>
                            <field name="patient_id" readonly="1"/>
                            <field name="doctor_id" readonly="1"/>
                            <field name="session_date"
                                   readonly="state != 'draft'"/>
                            <field name="duration_minutes"
                                   readonly="state != 'draft'"/>
                            <field name="session_end_date" readonly="1"/>
                        </group>

                        <group name="video_info" string="Video Call Details">
                            <field name="discuss_channel_id" readonly="1"
                                   invisible="not discuss_channel_id"/>
                            <field name="recording_enabled"/>
                        </group>
                    </group>

                    <group>
                        <group name="participants" string="Participants Status">
                            <field name="patient_joined" readonly="1"/>
                            <field name="patient_join_time" readonly="1"
                                   invisible="not patient_joined"/>
                            <field name="doctor_joined" readonly="1"/>
                            <field name="doctor_join_time" readonly="1"
                                   invisible="not doctor_joined"/>
                        </group>

                        <group name="invitations" string="Invitations">
                            <field name="invitation_sent" readonly="1"/>
                            <field name="invitation_sent_date" readonly="1"
                                   invisible="not invitation_sent"/>
                        </group>
                    </group>

                    <!-- Notebook -->
                    <notebook>
                        <page string="Session Notes" name="notes">
                            <field name="session_notes" placeholder="Add any notes about this telemedicine session..."/>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ========================================== -->
    <!-- Telemedicine Session Tree/List View -->
    <!-- ========================================== -->
    <record id="view_clinic_telemed_session_tree" model="ir.ui.view">
        <field name="name">clinic.telemed.session.list</field>
        <field name="model">clinic.telemed.session</field>
        <field name="arch" type="xml">
            <list string="Telemedicine Sessions"
                  decoration-info="state == 'scheduled'"
                  decoration-success="state == 'completed'"
                  decoration-warning="state in ['waiting', 'in_progress']"
                  decoration-muted="state == 'cancelled'"
                  multi_edit="1">

                <field name="display_name"/>
                <field name="session_date" widget="datetime"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="discuss_channel_id" optional="hide"/>
                <field name="duration_minutes" optional="hide"/>
                <field name="patient_joined" widget="boolean_toggle" optional="hide"/>
                <field name="doctor_joined" widget="boolean_toggle" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'scheduled'"
                       decoration-success="state == 'completed'"
                       decoration-warning="state in ['waiting', 'in_progress']"/>
            </list>
        </field>
    </record>

    <!-- ========================================== -->
    <!-- Telemedicine Session Calendar View -->
    <!-- ========================================== -->
    <record id="view_clinic_telemed_session_calendar" model="ir.ui.view">
        <field name="name">clinic.telemed.session.calendar</field>
        <field name="model">clinic.telemed.session</field>
        <field name="arch" type="xml">
            <calendar string="Telemedicine Sessions"
                      date_start="session_date"
                      date_stop="session_end_date"
                      color="state"
                      mode="month">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- ========================================== -->
    <!-- Telemedicine Session Search View -->
    <!-- ========================================== -->
    <record id="view_clinic_telemed_session_search" model="ir.ui.view">
        <field name="name">clinic.telemed.session.search</field>
        <field name="model">clinic.telemed.session</field>
        <field name="arch" type="xml">
            <search>
                <!-- Search Fields -->
                <field name="display_name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="appointment_id"/>

                <!-- Filters by State -->
                <filter string="Draft" name="filter_draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Scheduled" name="filter_scheduled"
                        domain="[('state', '=', 'scheduled')]"/>
                <filter string="Waiting Room" name="filter_waiting"
                        domain="[('state', '=', 'waiting')]"/>
                <filter string="In Progress" name="filter_in_progress"
                        domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="filter_completed"
                        domain="[('state', '=', 'completed')]"/>

                <separator/>

                <!-- Filters by Date -->
                <filter string="Today" name="filter_today"
                        domain="[('session_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')),
                                ('session_date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="This Week" name="filter_this_week"
                        domain="[('session_date', '&gt;=', (context_today() - relativedelta(weeks=0, weekday=0)).strftime('%Y-%m-%d 00:00:00')),
                                ('session_date', '&lt;=', (context_today() + relativedelta(weeks=0, weekday=6)).strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="This Month" name="filter_this_month"
                        domain="[('session_date', '&gt;=', context_today().strftime('%Y-%m-01 00:00:00')),
                                ('session_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d 23:59:59'))]"/>

                <separator/>

                <!-- Filters by Participants -->
                <filter string="Patient Joined" name="filter_patient_joined"
                        domain="[('patient_joined', '=', True)]"/>
                <filter string="Doctor Joined" name="filter_doctor_joined"
                        domain="[('doctor_joined', '=', True)]"/>

                <separator/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Patient" name="group_patient"
                            context="{'group_by': 'patient_id'}"/>
                    <filter string="Doctor" name="group_doctor"
                            context="{'group_by': 'doctor_id'}"/>
                    <filter string="Session Date" name="group_session_date"
                            context="{'group_by': 'session_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ========================================== -->
    <!-- Telemedicine Session Actions -->
    <!-- ========================================== -->
    <record id="action_clinic_telemed_session" model="ir.actions.act_window">
        <field name="name">Telemedicine Sessions</field>
        <field name="res_model">clinic.telemed.session</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="context">{
            'search_default_filter_scheduled': 1,
            'search_default_filter_in_progress': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Telemedicine Session
            </p>
            <p>
                Schedule video consultations with patients using Odoo Discuss.
            </p>
        </field>
    </record>

    <record id="action_clinic_telemed_session_today" model="ir.actions.act_window">
        <field name="name">Today's Telemedicine Sessions</field>
        <field name="res_model">clinic.telemed.session</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="context">{
            'search_default_filter_today': 1,
            'search_default_filter_in_progress': 1,
        }</field>
        <field name="domain">[('state', 'not in', ['cancelled', 'completed'])]</field>
    </record>

    <!-- ========================================== -->
    <!-- Menu Items -->
    <!-- ========================================== -->

    <!-- Root Menu - Under Integrations -->
    <menuitem id="menu_clinic_telemed_root"
              name="Telemedicine"
              parent="clinic_base.menu_clinic_integrations"
              sequence="20"/>

    <!-- Sessions Menu -->
    <menuitem id="menu_clinic_telemed_sessions"
              name="Sessions"
              parent="menu_clinic_telemed_root"
              action="action_clinic_telemed_session"
              sequence="10"/>

    <!-- Today's Sessions -->
    <menuitem id="menu_clinic_telemed_sessions_today"
              name="Today's Sessions"
              parent="menu_clinic_telemed_root"
              action="action_clinic_telemed_session_today"
              sequence="11"/>

</odoo>
