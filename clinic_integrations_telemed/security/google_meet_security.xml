<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TASK-F3-002: Google Meet Security Rules -->

    <!-- Record Rules -->
    <record id="google_meet_config_user_rule" model="ir.rule">
        <field name="name">Google Meet Config: Staff can only see their own</field>
        <field name="model_id" ref="model_clinic_google_meet_config"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('clinic_staff.group_clinic_staff_user'))]"/>
    </record>

    <record id="google_meet_config_manager_rule" model="ir.rule">
        <field name="name">Google Meet Config: Managers see all</field>
        <field name="model_id" ref="model_clinic_google_meet_config"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('clinic_staff.group_clinic_staff_manager'))]"/>
    </record>
</odoo>
