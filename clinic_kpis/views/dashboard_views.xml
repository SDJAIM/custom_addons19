<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- KPI Dashboard Configuration -->
    <record id="view_kpi_dashboard" model="ir.ui.view">
        <field name="name">clinic.kpi.dashboard</field>
        <field name="model">clinic.kpi.dashboard</field>
        <field name="arch" type="xml">
            <form string="Dashboard Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Dashboard Name"/></h1>
                    </div>
                    <group>
                        <group string="Settings">
                            <field name="user_id"/>
                            <field name="is_default"/>
                            <field name="auto_refresh"/>
                            <field name="refresh_interval" invisible="not auto_refresh"/>
                            <field name="last_refresh" readonly="1"/>
                        </group>
                        <group string="Visible Widgets">
                            <field name="show_appointments_today"/>
                            <field name="show_revenue_mtd"/>
                            <field name="show_new_patients"/>
                            <field name="show_no_show_rate"/>
                            <field name="show_avg_wait_time"/>
                            <field name="show_claim_status"/>
                            <field name="show_top_procedures"/>
                            <field name="show_staff_utilization"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_kpi_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard Configuration</field>
        <field name="res_model">clinic.kpi.dashboard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_kpi_dashboard"/>
    </record>

    <!-- TASK-F3-004: OWL Dashboard Client Action -->
    <record id="action_clinic_dashboard_owl" model="ir.actions.client">
        <field name="name">Analytics Dashboard</field>
        <field name="tag">clinic_kpis.dashboard</field>
        <field name="target">current</field>
    </record>

    <!-- Main Menu - Dashboard under Clinic Root -->
    <menuitem id="menu_kpi_root"
        name="Dashboard"
        parent="clinic_base.menu_clinic_root"
        action="action_clinic_dashboard_owl"
        sequence="10"/>

    <!-- Submenu for Dashboard Configuration -->
    <menuitem id="menu_kpi_config"
        name="Dashboard Configuration"
        parent="menu_kpi_root"
        action="action_kpi_dashboard"
        sequence="100"/>
</odoo>
