<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Module Category -->
        <record id="module_category_clinic_appointment" model="ir.module.category">
            <field name="name">Clinic Appointments</field>
            <field name="description">Manage appointments and scheduling</field>
            <field name="sequence">3</field>
        </record>
        
        <!-- Privilege for groups -->
        <record id="privilege_clinic_appointment" model="res.groups.privilege">
            <field name="name">Appointment Access</field>
            <field name="description">Access level for appointment management</field>
            <field name="placeholder">No access</field>
            <field name="sequence">10</field>
            <field name="category_id" ref="module_category_clinic_appointment"/>
        </record>

        <!-- Groups -->
        <record id="group_appointment_user" model="res.groups">
            <field name="name">User</field>
            <field name="privilege_id" ref="privilege_clinic_appointment"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view and create appointments</field>
        </record>
        
        <record id="group_appointment_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="privilege_id" ref="privilege_clinic_appointment"/>
            <field name="implied_ids" eval="[(4, ref('group_appointment_user'))]"/>
            <field name="comment">Can manage all appointments and settings</field>
        </record>
        
        <record id="group_appointment_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="privilege_id" ref="privilege_clinic_appointment"/>
            <field name="implied_ids" eval="[(4, ref('group_appointment_manager'))]"/>
            <field name="comment">Full access to appointment system</field>
        </record>
        
        <!-- Record Rules -->
        
        <!-- Portal users can only see their own appointments -->
        <record id="appointment_portal_rule" model="ir.rule">
            <field name="name">Portal: Own Appointments</field>
            <field name="model_id" ref="model_clinic_appointment"/>
            <field name="domain_force">[('patient_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Staff can see their own appointments -->
        <record id="appointment_staff_own_rule" model="ir.rule">
            <field name="name">Staff: Own Appointments</field>
            <field name="model_id" ref="model_clinic_appointment"/>
            <field name="domain_force">['|', ('staff_id.user_id', '=', user.id), ('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_appointment_user'))]"/>
        </record>
        
        <!-- Managers can see all appointments -->
        <record id="appointment_manager_rule" model="ir.rule">
            <field name="name">Manager: All Appointments</field>
            <field name="model_id" ref="model_clinic_appointment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_appointment_manager'))]"/>
        </record>
    </data>
</odoo>