<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ======================== -->
        <!-- Appointment Stages -->
        <!-- ======================== -->

        <!-- Draft Stage -->
        <record id="stage_draft" model="clinic.appointment.stage">
            <field name="name">Draft</field>
            <field name="sequence">10</field>
            <field name="stage_type">draft</field>
            <field name="fold" eval="False"/>
            <field name="send_email" eval="False"/>
            <field name="description">New appointment, not yet confirmed</field>
        </record>

        <!-- Confirmed Stage -->
        <record id="stage_confirmed" model="clinic.appointment.stage">
            <field name="name">Confirmed</field>
            <field name="sequence">20</field>
            <field name="stage_type">confirmed</field>
            <field name="fold" eval="False"/>
            <field name="send_email" eval="True"/>
            <field name="mail_template_id" ref="email_template_appointment_confirmation"/>
            <field name="description">Appointment confirmed by staff or customer</field>
        </record>

        <!-- Done Stage -->
        <record id="stage_done" model="clinic.appointment.stage">
            <field name="name">Completed</field>
            <field name="sequence">30</field>
            <field name="stage_type">done</field>
            <field name="fold" eval="True"/>
            <field name="send_email" eval="False"/>
            <field name="description">Appointment completed successfully</field>
        </record>

        <!-- No Show Stage -->
        <record id="stage_no_show" model="clinic.appointment.stage">
            <field name="name">No Show</field>
            <field name="sequence">40</field>
            <field name="stage_type">no_show</field>
            <field name="fold" eval="True"/>
            <field name="send_email" eval="False"/>
            <field name="description">Patient did not show up</field>
        </record>

        <!-- Cancelled Stage -->
        <record id="stage_cancelled" model="clinic.appointment.stage">
            <field name="name">Cancelled</field>
            <field name="sequence">50</field>
            <field name="stage_type">cancelled</field>
            <field name="fold" eval="True"/>
            <field name="send_email" eval="True"/>
            <field name="mail_template_id" ref="email_template_appointment_cancellation"/>
            <field name="description">Appointment cancelled by staff or customer</field>
        </record>
    </data>
</odoo>
