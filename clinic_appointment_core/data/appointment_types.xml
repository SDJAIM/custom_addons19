<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Medical Appointment Types -->
        <record id="appointment_type_consultation" model="clinic.appointment.type">
            <field name="name">General Consultation</field>
            <field name="code">GC</field>
            <field name="service_type">medical</field>
            <field name="duration">0.5</field>
            <field name="color">1</field>
            <field name="price">100</field>
        </record>
        
        <record id="appointment_type_follow_up" model="clinic.appointment.type">
            <field name="name">Follow-up</field>
            <field name="code">FU</field>
            <field name="service_type">all</field>
            <field name="duration">0.25</field>
            <field name="color">2</field>
            <field name="price">50</field>
        </record>
        
        <record id="appointment_type_checkup" model="clinic.appointment.type">
            <field name="name">Annual Check-up</field>
            <field name="code">AC</field>
            <field name="service_type">medical</field>
            <field name="duration">1.0</field>
            <field name="color">3</field>
            <field name="price">150</field>
        </record>
        
        <!-- Dental Appointment Types -->
        <record id="appointment_type_dental_exam" model="clinic.appointment.type">
            <field name="name">Dental Examination</field>
            <field name="code">DE</field>
            <field name="service_type">dental</field>
            <field name="duration">0.5</field>
            <field name="color">4</field>
            <field name="price">80</field>
        </record>
        
        <record id="appointment_type_cleaning" model="clinic.appointment.type">
            <field name="name">Teeth Cleaning</field>
            <field name="code">TC</field>
            <field name="service_type">dental</field>
            <field name="duration">0.75</field>
            <field name="color">5</field>
            <field name="price">120</field>
        </record>
        
        <record id="appointment_type_filling" model="clinic.appointment.type">
            <field name="name">Filling</field>
            <field name="code">FIL</field>
            <field name="service_type">dental</field>
            <field name="duration">1.0</field>
            <field name="color">6</field>
            <field name="price">200</field>
            <field name="requires_special_room">True</field>
            <field name="room_type_required">surgery</field>
        </record>
        
        <!-- Telemedicine -->
        <record id="appointment_type_telemed" model="clinic.appointment.type">
            <field name="name">Telemedicine Consultation</field>
            <field name="code">TM</field>
            <field name="service_type">telemed</field>
            <field name="duration">0.5</field>
            <field name="color">7</field>
            <field name="price">75</field>
        </record>
        
        <!-- Emergency -->
        <record id="appointment_type_emergency" model="clinic.appointment.type">
            <field name="name">Emergency</field>
            <field name="code">EM</field>
            <field name="service_type">emergency</field>
            <field name="duration">1.0</field>
            <field name="color">9</field>
            <field name="is_emergency">True</field>
            <field name="priority">urgent</field>
            <field name="min_advance_hours">0</field>
            <field name="allow_online_booking">False</field>
        </record>
    </data>
</odoo>