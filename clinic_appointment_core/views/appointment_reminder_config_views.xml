<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TASK-F1-003: Multiple Reminders Configuration -->

    <!-- Tree View -->
    <record id="view_appointment_reminder_config_tree" model="ir.ui.view">
        <field name="name">clinic.appointment.reminder.config.tree</field>
        <field name="model">clinic.appointment.reminder.config</field>
        <field name="arch" type="xml">
            <list string="Reminder Configurations">
                <field name="type_id"/>
                <field name="hours_before"/>
                <field name="channel" widget="badge"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_appointment_reminder_config_form" model="ir.ui.view">
        <field name="name">clinic.appointment.reminder.config.form</field>
        <field name="model">clinic.appointment.reminder.config</field>
        <field name="arch" type="xml">
            <form string="Reminder Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="type_id" options="{'no_create': True}"/>
                            <field name="hours_before"/>
                            <field name="channel" widget="radio"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Templates" name="templates">
                            <group>
                                <field name="email_template_id" invisible="channel != 'email'"/>
                                <field name="sms_template_id" invisible="channel != 'sms'"/>
                                <!-- whatsapp_template_id added by clinic_integrations_whatsapp -->
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_appointment_reminder_config" model="ir.actions.act_window">
        <field name="name">Reminder Configurations</field>
        <field name="res_model">clinic.appointment.reminder.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No reminder configurations yet!
            </p>
            <p>
                Create multiple reminders for different appointment types.
            </p>
        </field>
    </record>

</odoo>
