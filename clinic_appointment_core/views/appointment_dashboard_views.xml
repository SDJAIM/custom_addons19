<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Advanced Analytics Dashboard Views (TASK-F3-004) -->

    <!-- Client Action for OWL Dashboard Component -->
    <record id="action_appointment_dashboard" model="ir.actions.client">
        <field name="name">Analytics Dashboard</field>
        <field name="tag">clinic_appointment_core.dashboard</field>
        <field name="target">current</field>
    </record>

    <!-- Menu Item: Dashboard -->
    <menuitem
        id="menu_appointment_dashboard"
        name="Dashboard"
        parent="menu_clinic_appointment_root"
        action="action_appointment_dashboard"
        sequence="1"/>

    <!-- Assets are defined in __manifest__.py under 'assets' key -->

</odoo>
