<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ======================== -->
    <!-- Appointment Tree View -->
    <!-- ======================== -->
    <record id="view_clinic_appointment_tree" model="ir.ui.view">
        <field name="name">clinic.appointment.list</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments"
                  decoration-danger="state=='no_show'"
                  decoration-warning="state=='draft'"
                  decoration-success="state=='done'"
                  decoration-muted="state=='cancelled'"
                  decoration-info="state=='confirmed'">
                <field name="appointment_number"/>
                <field name="start" widget="datetime"/>
                <field name="patient_id"/>
                <field name="staff_id"/>
                <field name="appointment_type_id"/>
                <field name="stage_id" widget="badge"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- ======================== -->
    <!-- Appointment Form View -->
    <!-- ======================== -->
    <record id="view_clinic_appointment_form" model="ir.ui.view">
        <field name="name">clinic.appointment.form</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment" class="o_form_sheet">
                <header>
                    <!-- Action Buttons - ONLY methods that exist in model -->
                    <button name="action_confirm" type="object" string="Confirm"
                           class="btn-primary"
                           invisible="state not in ['draft']"/>
                    <button name="action_start" type="object" string="Start Consultation"
                           class="btn-info"
                           invisible="state not in ['confirmed']"/>
                    <button name="action_done" type="object" string="Mark Done"
                           class="btn-success"
                           invisible="state not in ['confirmed']"/>
                    <button name="action_no_show" type="object" string="Mark No-Show"
                           class="btn-warning"
                           invisible="state not in ['confirmed']"/>
                    <button name="action_cancel" type="object" string="Cancel"
                           class="btn-danger"
                           invisible="state in ['done', 'cancelled', 'no_show']"/>
                    <button name="action_create_follow_up" type="object" string="Schedule Follow-up"
                           class="btn-secondary"
                           invisible="state != 'done'"/>
                    <button name="action_reschedule" type="object" string="Reschedule"
                           class="btn-secondary"
                           invisible="state not in ['draft', 'confirmed']"/>

                    <!-- Stage statusbar (clickable) -->
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="appointment_number" string="Appointment #"/>
                        <h1>
                            <field name="appointment_number" readonly="1"/>
                        </h1>
                    </div>

                    <!-- Main Information -->
                    <group>
                        <group string="Patient Information">
                            <field name="patient_id" required="1"/>
                        </group>
                        <group string="Appointment Details">
                            <field name="appointment_type_id" required="1"/>
                            <field name="staff_id" required="1"/>
                        </group>
                    </group>

                    <!-- Schedule -->
                    <group>
                        <group string="Schedule">
                            <field name="start" required="1"/>
                            <field name="stop"/>
                            <field name="allday"/>
                        </group>
                        <group string="Duration">
                            <field name="default_duration" readonly="1"/>
                            <field name="buffer_before" readonly="1"/>
                            <field name="buffer_after" readonly="1"/>
                        </group>
                    </group>

                    <!-- Booking Information -->
                    <group>
                        <group string="Online Booking">
                            <field name="booking_method"/>
                            <field name="access_token" readonly="1"/>
                            <field name="confirmed_by_customer" readonly="1"/>
                            <field name="confirmation_date" readonly="1"/>
                        </group>
                        <group string="Questionnaire">
                            <field name="questionnaire_completed" readonly="1"/>
                        </group>
                    </group>

                    <!-- Notebook with Additional Pages -->
                    <notebook>
                        <!-- Notes -->
                        <page string="Notes" name="notes">
                            <group>
                                <field name="notes" nolabel="1" placeholder="Add appointment notes..."/>
                            </group>
                        </page>

                        <!-- Follow-up -->
                        <page string="Follow-ups" name="followup">
                            <group>
                                <group>
                                    <field name="parent_appointment_id" readonly="1" string="Parent Appointment"/>
                                </group>
                            </group>
                            <separator string="Follow-up Appointments"/>
                            <field name="follow_up_ids" readonly="1" nolabel="1">
                                <tree>
                                    <field name="appointment_number"/>
                                    <field name="start"/>
                                    <field name="stage_id"/>
                                </tree>
                            </field>
                        </page>

                        <!-- Timing Information -->
                        <page string="Timing" name="timing">
                            <group>
                                <group string="Arrival">
                                    <field name="arrived_time" readonly="1"/>
                                    <field name="waiting_time" readonly="1" widget="float_time"/>
                                </group>
                                <group string="Consultation">
                                    <field name="consultation_start_time" readonly="1"/>
                                    <field name="consultation_end_time" readonly="1"/>
                                    <field name="consultation_duration" readonly="1" widget="float_time"/>
                                </group>
                            </group>
                        </page>

                        <!-- Questionnaire Responses - References dedicated views -->
                        <page string="Questionnaire" name="questionnaire">
                            <field name="questionnaire_answer_ids"
                                   nolabel="1"
                                   mode="tree,form">
                            </field>
                        </page>

                        <!-- Resource Allocation -->
                        <page string="Resources" name="resources">
                            <group>
                                <field name="resource_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter for messaging/activity -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ======================== -->
    <!-- Appointment Kanban View -->
    <!-- ======================== -->
    <record id="view_clinic_appointment_kanban" model="ir.ui.view">
        <field name="name">clinic.appointment.kanban</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_mobile" quick_create="false">
                <field name="id"/>
                <field name="appointment_number"/>
                <field name="patient_id"/>
                <field name="staff_id"/>
                <field name="start"/>
                <field name="state"/>
                <field name="stage_id"/>
                <progressbar field="state" colors="{'draft': 'warning', 'confirmed': 'info', 'done': 'success', 'cancelled': 'danger', 'no_show': 'danger'}"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="appointment_number"/>
                                    </strong>
                                    <span class="o_kanban_record_subtitle">
                                        <field name="start" widget="datetime"/>
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <strong>Patient:</strong> <field name="patient_id"/>
                                </div>
                                <div>
                                    <strong>Doctor:</strong> <field name="staff_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <span class="badge" t-attf-class="badge-{{ 'success' if record.state.raw_value == 'done' else 'warning' if record.state.raw_value == 'draft' else 'info' }}">
                                    <field name="state"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ======================== -->
    <!-- Appointment Calendar View -->
    <!-- ======================== -->
    <record id="view_clinic_appointment_calendar" model="ir.ui.view">
        <field name="name">clinic.appointment.calendar</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments"
                     date_start="start"
                     date_stop="stop"
                     color="staff_id"
                     mode="week"
                     event_open_popup="true"
                     quick_create="false">
                <field name="appointment_number"/>
                <field name="patient_id"/>
                <field name="staff_id" filters="1"/>
                <field name="state"/>
                <field name="appointment_type_id" filters="1"/>
            </calendar>
        </field>
    </record>

    <!-- ======================== -->
    <!-- Appointment Search View -->
    <!-- ======================== -->
    <record id="view_clinic_appointment_search" model="ir.ui.view">
        <field name="name">clinic.appointment.search</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <search>
                <field name="appointment_number"/>
                <field name="patient_id"/>
                <field name="staff_id"/>
                <field name="appointment_type_id"/>
                <field name="start"/>

                <!-- Filters by State -->
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="done" string="Done" domain="[('state', '=', 'done')]"/>
                <filter name="cancelled" string="Cancelled" domain="[('state', '=', 'cancelled')]"/>
                <filter name="no_show" string="No-Show" domain="[('state', '=', 'no_show')]"/>

                <separator/>

                <!-- Filters by Time -->
                <filter name="today" string="Today" domain="[('start', '>=', context_today().strftime('%Y-%m-%d 00:00:00')), ('start', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter name="upcoming" string="Upcoming" domain="[('start', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="past" string="Past" domain="[('start', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>

                <separator/>

                <!-- Grouping -->
                <filter string="Stage" name="group_stage" context="{'group_by': 'stage_id'}"/>
                <filter string="Staff" name="group_staff" context="{'group_by': 'staff_id'}"/>
                <filter string="Date" name="group_date" context="{'group_by': 'start:day'}"/>
                <filter string="Patient" name="group_patient" context="{'group_by': 'patient_id'}"/>
                <filter string="Type" name="group_type" context="{'group_by': 'appointment_type_id'}"/>
            </search>
        </field>
    </record>

    <!-- ======================== -->
    <!-- Appointment Action Window -->
    <!-- ======================== -->
    <record id="action_clinic_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">clinic.appointment</field>
        <field name="view_mode">tree,kanban,calendar,form</field>
        <field name="search_view_id" ref="view_clinic_appointment_search"/>
        <field name="context">{'search_default_today': 1, 'search_default_confirmed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No appointments scheduled yet!
            </p>
            <p>
                Create or schedule new patient appointments to get started.
            </p>
        </field>
    </record>

    <!-- ======================== -->
    <!-- Staff Schedule Action -->
    <!-- ======================== -->
    <record id="action_clinic_appointment_schedule" model="ir.actions.act_window">
        <field name="name">Staff Schedule</field>
        <field name="res_model">clinic.appointment</field>
        <field name="view_mode">calendar,tree,form</field>
        <field name="search_view_id" ref="view_clinic_appointment_search"/>
        <field name="context">{'search_default_today': 1, 'search_default_upcoming': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No schedule available!
            </p>
            <p>
                View and manage doctor/staff schedules and appointments.
            </p>
        </field>
    </record>
</odoo>
