<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Appointment Tree View -->
    <record id="view_clinic_appointment_tree" model="ir.ui.view">
        <field name="name">clinic.appointment.list</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments" 
                  decoration-danger="state=='no_show'"
                  decoration-warning="state=='draft'"
                  decoration-success="state=='done'"
                  decoration-info="state=='confirmed'">
                <field name="appointment_number"/>
                <field name="start" widget="datetime"/>
                <field name="patient_id"/>
                <field name="staff_id"/>
                <field name="service_type"/>
                <field name="room_id" optional="show"/>
                <field name="urgency" 
                       decoration-danger="urgency=='emergency'"
                       decoration-warning="urgency=='high'"/>
                <field name="state"/>
                <field name="insurance_flag" widget="boolean_toggle" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Appointment Form View -->
    <record id="view_clinic_appointment_form" model="ir.ui.view">
        <field name="name">clinic.appointment.form</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment" class="o_form_sheet">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" 
                           invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_arrive" type="object" string="Arrived" 
                           invisible="state != 'confirmed'" class="btn-info"/>
                    <button name="action_start" type="object" string="Start" 
                           invisible="state != 'arrived'" class="btn-warning"/>
                    <button name="action_done" type="object" string="Done" 
                           invisible="state != 'in_progress'" class="btn-success"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                           invisible="state not in ['draft', 'confirmed', 'arrived']" class="btn-danger"/>
                    <button name="action_no_show" type="object" string="No Show" 
                           invisible="state not in ['confirmed', 'arrived']"/>
                    <button name="action_reschedule" type="object" string="Reschedule" 
                           invisible="state not in ['confirmed', 'arrived']" icon="fa-calendar"/>
                    <button name="action_create_follow_up" type="object" string="Schedule Follow-up" 
                           invisible="state != 'done'" icon="fa-plus"/>
                    <button name="action_approve" type="object" string="Approve" 
                           invisible="requires_approval == False or approved_by != False"
                           groups="clinic_appointment_core.group_appointment_manager"/>
                    <field name="state" widget="statusbar" 
                          statusbar_visible="draft,confirmed,arrived,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-stethoscope"
                               invisible="follow_up_count == 0">
                            <field name="follow_up_count" widget="statinfo" string="Follow-ups"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Requires Approval" 
                           invisible="requires_approval == False or approved_by != False"/>
                    <widget name="web_ribbon" title="Emergency" bg_color="bg-danger"
                           invisible="urgency != 'emergency'"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="appointment_number" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Patient Information">
                            <field name="patient_id" required="1"/>
                            <field name="patient_age"/>
                            <field name="patient_phone" widget="phone"/>
                        </group>
                        <group string="Appointment Details">
                            <field name="appointment_type_id" required="1"/>
                            <field name="service_type" required="1"/>
                            <field name="urgency"/>
                            <field name="staff_id" required="1" 
                                  domain="[('state', '=', 'active')]"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Schedule">
                            <field name="start" required="1"/>
                            <field name="duration"/>
                            <field name="stop"/>
                            <field name="allday"/>
                        </group>
                        <group string="Location">
                            <field name="branch_id" required="1"/>
                            <field name="room_id" 
                                  domain="[('branch_id', '=', branch_id), ('status', '=', 'available')]"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Clinical Information" name="clinical">
                            <group>
                                <field name="chief_complaint" 
                                      placeholder="Main reason for visit..."/>
                                <field name="symptoms" 
                                      placeholder="Patient reported symptoms..."/>
                                <field name="notes" 
                                      placeholder="Additional notes..."/>
                            </group>
                        </page>
                        
                        <page string="Insurance" name="insurance" 
                             invisible="insurance_flag == False">
                            <group>
                                <group>
                                    <field name="insurance_flag"/>
                                    <field name="insurance_id" 
                                          required="insurance_flag == True"
                                          invisible="insurance_flag == False"
                                          domain="[('patient_id', '=', patient_id), ('is_active', '=', True)]"/>
                                </group>
                                <group>
                                    <field name="requires_authorization"/>
                                    <field name="insurance_auth_number" 
                                          required="requires_authorization == True"
                                          invisible="requires_authorization == False"/>
                                    <field name="copay_amount" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Telemedicine" name="telemed" 
                             invisible="service_type != 'telemed'">
                            <group>
                                <field name="telemed_platform"/>
                                <field name="telemed_link" widget="url" 
                                      placeholder="Video consultation link..."/>
                            </group>
                        </page>
                        
                        <page string="Follow-up" name="followup" 
                             invisible="is_follow_up == False">
                            <group>
                                <field name="is_follow_up"/>
                                <field name="parent_appointment_id" 
                                      invisible="is_follow_up == False"/>
                            </group>
                            <field name="follow_up_ids" readonly="1"/>
                        </page>
                        
                        <page string="Timing" name="timing" 
                             invisible="state in ['draft', 'confirmed']">
                            <group>
                                <group string="Check-in">
                                    <field name="arrived_time" readonly="1"/>
                                    <field name="waiting_time" widget="float_time"/>
                                </group>
                                <group string="Consultation">
                                    <field name="consultation_start_time" readonly="1"/>
                                    <field name="consultation_end_time" readonly="1"/>
                                    <field name="consultation_duration" widget="float_time"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Notifications" name="notifications">
                            <group>
                                <group string="Reminders">
                                    <field name="reminder_sent"/>
                                    <field name="reminder_sent_date" readonly="1"/>
                                </group>
                                <group string="Confirmation">
                                    <field name="confirmed_by_patient"/>
                                    <field name="confirmation_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Approval" name="approval" 
                             invisible="requires_approval == False">
                            <group>
                                <field name="requires_approval"/>
                                <field name="approved_by" readonly="1"/>
                                <field name="approval_date" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="Internal Notes" name="internal" 
                             groups="clinic_appointment_core.group_appointment_user">
                            <field name="internal_notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Appointment Kanban View -->
    <record id="view_clinic_appointment_kanban" model="ir.ui.view">
        <field name="name">clinic.appointment.kanban</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile" 
                   quick_create="false">
                <field name="id"/>
                <field name="appointment_number"/>
                <field name="patient_id"/>
                <field name="staff_id"/>
                <field name="start"/>
                <field name="service_type"/>
                <field name="urgency"/>
                <field name="state"/>
                <field name="insurance_flag"/>
                <progressbar field="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="appointment_number"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="patient_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <i class="fa fa-calendar"/> <field name="start" widget="datetime"/>
                                </div>
                                <div>
                                    <i class="fa fa-user-md"/> <field name="staff_id"/>
                                </div>
                                <div class="o_kanban_tags_section">
                                    <field name="service_type"/>
                                    <field name="urgency" 
                                          invisible="urgency == 'medium'"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom" t-if="record.insurance_flag.raw_value">
                                <span class="badge badge-info">
                                    <i class="fa fa-shield"/> Insurance
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Enhanced Appointment Calendar View with Scheduling Features -->
    <record id="view_clinic_appointment_calendar" model="ir.ui.view">
        <field name="name">clinic.appointment.calendar</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments"
                     date_start="start"
                     date_stop="stop"
                     color="staff_id"
                     mode="week"
                     event_open_popup="true"
                     quick_create="true"
                     all_day="allday">
                <field name="appointment_number"/>
                <field name="patient_id" avatar_field="image_128"/>
                <field name="staff_id" filters="1" avatar_field="image_128"/>
                <field name="service_type" filters="1"/>
                <field name="room_id" filters="1"/>
                <field name="branch_id" invisible="1" filters="1"/>
                <field name="state"/>
                <field name="urgency" invisible="urgency == 'medium'"/>
            </calendar>
        </field>
    </record>

    <!-- Timeline/Schedule View using Tree grouped by date/time (Community Alternative) -->
    <record id="view_clinic_appointment_timeline" model="ir.ui.view">
        <field name="name">clinic.appointment.timeline</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointment Timeline"
                  create="false"
                  edit="false"
                  decoration-info="state=='confirmed'"
                  decoration-warning="state=='arrived'"
                  decoration-success="state=='in_progress'"
                  decoration-muted="state=='done'"
                  default_order="start,staff_id">
                <field name="start" widget="datetime"/>
                <field name="stop" widget="datetime"/>
                <field name="staff_id"/>
                <field name="patient_id"/>
                <field name="service_type"/>
                <field name="room_id"/>
                <field name="state"/>
                <field name="duration" widget="float_time"/>
            </list>
        </field>
    </record>

    <!-- Appointment Search View -->
    <record id="view_clinic_appointment_search" model="ir.ui.view">
        <field name="name">clinic.appointment.search</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <search>
                <field name="appointment_number"/>
                <field name="patient_id"/>
                <field name="staff_id"/>
                <field name="start"/>
                
                <filter name="today" string="Today" 
                       domain="[('start', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0)),
                                ('start', '&lt;=', datetime.datetime.now().replace(hour=23, minute=59, second=59))]"/>
                <filter name="tomorrow" string="Tomorrow" 
                       domain="[('start', '&gt;=', (datetime.datetime.now() + datetime.timedelta(days=1)).replace(hour=0, minute=0, second=0)),
                                ('start', '&lt;=', (datetime.datetime.now() + datetime.timedelta(days=1)).replace(hour=23, minute=59, second=59))]"/>
                <filter name="this_week" string="This Week" 
                       domain="[('start', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=datetime.datetime.now().weekday())).replace(hour=0, minute=0, second=0))]"/>
                <separator/>
                
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="arrived" string="Arrived" domain="[('state', '=', 'arrived')]"/>
                <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="done" string="Done" domain="[('state', '=', 'done')]"/>
                <separator/>
                
                <filter name="medical" string="Medical" domain="[('service_type', '=', 'medical')]"/>
                <filter name="dental" string="Dental" domain="[('service_type', '=', 'dental')]"/>
                <filter name="telemed" string="Telemedicine" domain="[('service_type', '=', 'telemed')]"/>
                <filter name="emergency" string="Emergency" domain="[('urgency', '=', 'emergency')]"/>
                <separator/>
                
                <filter name="insurance" string="Insurance" domain="[('insurance_flag', '=', True)]"/>
                <filter name="follow_up" string="Follow-ups" domain="[('is_follow_up', '=', True)]"/>
                
                <separator string="Group By"/>
                <filter name="group_date" string="Date" context="{'group_by': 'start:day'}"/>
                <filter name="group_staff" string="Doctor/Dentist" context="{'group_by': 'staff_id'}"/>
                <filter name="group_patient" string="Patient" context="{'group_by': 'patient_id'}"/>
                <filter name="group_service" string="Service Type" context="{'group_by': 'service_type'}"/>
                <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                <filter name="group_branch" string="Branch" context="{'group_by': 'branch_id'}"/>
                <filter name="group_room" string="Room" context="{'group_by': 'room_id'}"/>
                
                <searchpanel>
                    <field name="state" enable_counters="1"/>
                    <field name="service_type" enable_counters="1"/>
                    <field name="staff_id" enable_counters="1"/>
                    <field name="branch_id" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Appointment Action -->
    <record id="action_clinic_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">clinic.appointment</field>
        <field name="view_mode">list,kanban,calendar,form</field>
        <field name="search_view_id" ref="view_clinic_appointment_search"/>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No appointments scheduled yet!
            </p>
            <p>
                Schedule patient appointments and manage your clinic's calendar.
            </p>
        </field>
    </record>

    <!-- Staff Schedule Action (Timeline View) -->
    <record id="action_clinic_appointment_schedule" model="ir.actions.act_window">
        <field name="name">Staff Schedule</field>
        <field name="res_model">clinic.appointment</field>
        <field name="view_mode">list,calendar,form</field>
        <field name="view_id" ref="view_clinic_appointment_timeline"/>
        <field name="search_view_id" ref="view_clinic_appointment_search"/>
        <field name="context">{'search_default_today': 1, 'search_default_group_staff': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No appointments scheduled!
            </p>
            <p>
                View and manage staff schedules and appointment timelines.
            </p>
        </field>
    </record>
</odoo>