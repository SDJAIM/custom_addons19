<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ======================== -->
    <!-- SMS Configuration Settings -->
    <!-- ======================== -->
    <record id="view_appointment_sms_config" model="ir.ui.view">
        <field name="name">clinic.appointment.sms.config.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Appointment SMS" string="Appointment SMS" data-key="clinic_appointment_sms">
                    <h2>SMS Notifications</h2>

                    <div class="row mt16 o_settings_container">
                        <!-- Enable SMS -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="clinic_sms_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="clinic_sms_enabled"/>
                                <div class="text-muted">
                                    Enable SMS notifications for appointments
                                </div>
                            </div>
                        </div>

                        <!-- Provider Selection -->
                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('clinic_sms_enabled', '=', False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="clinic_sms_provider"/>
                                <field name="clinic_sms_provider" class="o_light_label" widget="radio"/>
                            </div>
                        </div>

                        <!-- From Number -->
                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('clinic_sms_enabled', '=', False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="clinic_sms_from_number"/>
                                <field name="clinic_sms_from_number" placeholder="+1234567890"/>
                                <div class="text-muted">
                                    Sender phone number (E.164 format: +country code + number)
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Twilio Settings -->
                    <div attrs="{'invisible': ['|', ('clinic_sms_enabled', '=', False), ('clinic_sms_provider', '!=', 'twilio')]}">
                        <h3>Twilio Configuration</h3>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label for="clinic_sms_twilio_account_sid"/>
                                    <field name="clinic_sms_twilio_account_sid" password="True"/>
                                    <div class="text-muted">
                                        <a href="https://www.twilio.com/console" target="_blank">Get from Twilio Console</a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label for="clinic_sms_twilio_auth_token"/>
                                    <field name="clinic_sms_twilio_auth_token" password="True"/>
                                    <div class="text-muted">
                                        Auth Token from Twilio
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- AWS SNS Settings -->
                    <div attrs="{'invisible': ['|', ('clinic_sms_enabled', '=', False), ('clinic_sms_provider', '!=', 'aws_sns')]}">
                        <h3>AWS SNS Configuration</h3>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label for="clinic_sms_aws_access_key"/>
                                    <field name="clinic_sms_aws_access_key" password="True"/>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label for="clinic_sms_aws_secret_key"/>
                                    <field name="clinic_sms_aws_secret_key" password="True"/>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label for="clinic_sms_aws_region"/>
                                    <field name="clinic_sms_aws_region"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- HTTP API Settings -->
                    <div attrs="{'invisible': ['|', ('clinic_sms_enabled', '=', False), ('clinic_sms_provider', '!=', 'http_api')]}">
                        <h3>HTTP API Configuration</h3>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label for="clinic_sms_api_url"/>
                                    <field name="clinic_sms_api_url" placeholder="https://api.example.com/sms"/>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label for="clinic_sms_api_key"/>
                                    <field name="clinic_sms_api_key" password="True"/>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label for="clinic_sms_api_method"/>
                                    <field name="clinic_sms_api_method"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- SMS Log -->
                    <div class="row mt16 o_settings_container" attrs="{'invisible': [('clinic_sms_enabled', '=', False)]}">
                        <div class="col-12">
                            <button name="%(action_appointment_sms_log)d"
                                    type="action"
                                    string="View SMS Log"
                                    class="btn-link"
                                    icon="fa-list"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- ======================== -->
    <!-- SMS Log Views -->
    <!-- ======================== -->
    <record id="view_appointment_sms_log_tree" model="ir.ui.view">
        <field name="name">clinic.appointment.sms.log.tree</field>
        <field name="model">clinic.appointment.sms.log</field>
        <field name="arch" type="xml">
            <tree string="SMS Log" create="0" edit="0" decoration-success="success == True" decoration-danger="success == False">
                <field name="create_date"/>
                <field name="appointment_id"/>
                <field name="phone_number"/>
                <field name="message"/>
                <field name="provider"/>
                <field name="success"/>
                <field name="message_id"/>
                <field name="error"/>
            </tree>
        </field>
    </record>

    <record id="view_appointment_sms_log_form" model="ir.ui.view">
        <field name="name">clinic.appointment.sms.log.form</field>
        <field name="model">clinic.appointment.sms.log</field>
        <field name="arch" type="xml">
            <form string="SMS Log" create="0" edit="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(clinic_appointment_core.action_appointment_view)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-calendar"
                                context="{'search_default_id': appointment_id}"
                                attrs="{'invisible': [('appointment_id', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">Appointment</span>
                            </div>
                        </button>
                    </div>

                    <group>
                        <group>
                            <field name="create_date"/>
                            <field name="appointment_id"/>
                            <field name="phone_number"/>
                            <field name="provider"/>
                        </group>
                        <group>
                            <field name="success"/>
                            <field name="message_id"/>
                            <field name="error" attrs="{'invisible': [('error', '=', False)]}"/>
                        </group>
                    </group>

                    <group string="Message">
                        <field name="message" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_appointment_sms_log_search" model="ir.ui.view">
        <field name="name">clinic.appointment.sms.log.search</field>
        <field name="model">clinic.appointment.sms.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="phone_number"/>
                <field name="appointment_id"/>
                <field name="message"/>
                <separator/>
                <filter string="Successful" name="success" domain="[('success', '=', True)]"/>
                <filter string="Failed" name="failed" domain="[('success', '=', False)]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('create_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Provider" name="group_provider" context="{'group_by': 'provider'}"/>
                    <filter string="Success" name="group_success" context="{'group_by': 'success'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_appointment_sms_log" model="ir.actions.act_window">
        <field name="name">SMS Log</field>
        <field name="res_model">clinic.appointment.sms.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No SMS messages sent yet
            </p>
            <p>
                SMS messages will appear here once they are sent.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_appointment_sms_log"
              name="SMS Log"
              parent="menu_appointment_root"
              action="action_appointment_sms_log"
              sequence="100"
              groups="clinic_appointment_core.group_appointment_manager"/>
</odoo>
