<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ======================== -->
    <!-- SMS Log Views & Action (defined first, referenced below) -->
    <!-- ======================== -->
    <record id="view_appointment_sms_log_tree" model="ir.ui.view">
        <field name="name">clinic.appointment.sms.log.tree</field>
        <field name="model">clinic.appointment.sms.log</field>
        <field name="arch" type="xml">
            <list string="SMS Log" create="0" edit="0" decoration-success="success == True" decoration-danger="success == False">
                <field name="create_date"/>
                <field name="appointment_id"/>
                <field name="phone_number"/>
                <field name="message"/>
                <field name="provider"/>
                <field name="success"/>
                <field name="message_id"/>
                <field name="error"/>
            </list>
        </field>
    </record>

    <record id="view_appointment_sms_log_form" model="ir.ui.view">
        <field name="name">clinic.appointment.sms.log.form</field>
        <field name="model">clinic.appointment.sms.log</field>
        <field name="arch" type="xml">
            <form string="SMS Log" create="0" edit="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(clinic_appointment_core.action_clinic_appointment)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-calendar"
                                context="{'search_default_id': appointment_id}"
                                invisible="not appointment_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">Appointment</span>
                            </div>
                        </button>
                    </div>

                    <group>
                        <group>
                            <field name="create_date"/>
                            <field name="appointment_id"/>
                            <field name="phone_number"/>
                            <field name="provider"/>
                        </group>
                        <group>
                            <field name="success"/>
                            <field name="message_id"/>
                            <field name="error" invisible="not error"/>
                        </group>
                    </group>

                    <group string="Message">
                        <field name="message" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_appointment_sms_log_search" model="ir.ui.view">
        <field name="name">clinic.appointment.sms.log.search</field>
        <field name="model">clinic.appointment.sms.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="phone_number"/>
                <field name="appointment_id"/>
                <field name="message"/>
                <separator/>
                <filter string="Successful" name="success" domain="[('success', '=', True)]"/>
                <filter string="Failed" name="failed" domain="[('success', '=', False)]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('create_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]"/>
                <separator/>
                <filter string="Provider" name="group_provider" context="{'group_by': 'provider'}"/>
                <filter string="Success" name="group_success" context="{'group_by': 'success'}"/>
                <filter string="Date" name="group_date" context="{'group_by': 'create_date:day'}"/>
            </search>
        </field>
    </record>

    <record id="action_appointment_sms_log" model="ir.actions.act_window">
        <field name="name">SMS Log</field>
        <field name="res_model">clinic.appointment.sms.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No SMS messages sent yet
            </p>
            <p>
                SMS messages will appear here once they are sent.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_appointment_sms_log"
              name="SMS Log"
              parent="menu_clinic_appointment_config"
              action="action_appointment_sms_log"
              sequence="100"
              groups="clinic_appointment_core.group_appointment_manager"/>

</odoo>
