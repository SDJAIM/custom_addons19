<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_clinic_data_import_wizard_form" model="ir.ui.view">
            <field name="name">clinic.data.import.wizard.form</field>
            <field name="model">clinic.data.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Data">
                    <group>
                        <field name="import_type"/>
                        <field name="file_data" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button name="action_import" type="object" string="Import" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_clinic_data_import_wizard" model="ir.actions.act_window">
            <field name="name">Import Data</field>
            <field name="res_model">clinic.data.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>