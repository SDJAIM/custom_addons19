<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_clinic_audit_log_tree" model="ir.ui.view">
            <field name="name">clinic.audit.log.tree</field>
            <field name="model">clinic.audit.log</field>
            <field name="arch" type="xml">
                <tree string="Audit Logs" create="false" edit="false">
                    <field name="create_date" string="Date"/>
                    <field name="model_name"/>
                    <field name="action"/>
                    <field name="user_id"/>
                    <field name="record_name"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_clinic_audit_log_form" model="ir.ui.view">
            <field name="name">clinic.audit.log.form</field>
            <field name="model">clinic.audit.log</field>
            <field name="arch" type="xml">
                <form string="Audit Log" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="model_name"/>
                                <field name="record_id"/>
                                <field name="record_name"/>
                                <field name="action"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="create_date"/>
                                <field name="ip_address"/>
                            </group>
                        </group>
                        <group string="Details">
                            <field name="old_values" readonly="1"/>
                            <field name="new_values" readonly="1"/>
                            <field name="description" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_clinic_audit_log_search" model="ir.ui.view">
            <field name="name">clinic.audit.log.search</field>
            <field name="model">clinic.audit.log</field>
            <field name="arch" type="xml">
                <search>
                    <field name="model_name"/>
                    <field name="user_id"/>
                    <field name="action"/>
                    <filter string="Today" name="today"
                            domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="This Week" name="this_week"
                            domain="[('create_date', '>=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="User" name="group_user" context="{'group_by':'user_id'}"/>
                        <filter string="Model" name="group_model" context="{'group_by':'model_name'}"/>
                        <filter string="Action" name="group_action" context="{'group_by':'action'}"/>
                        <filter string="Date" name="group_date" context="{'group_by':'create_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_clinic_audit_log" model="ir.actions.act_window">
            <field name="name">Audit Logs</field>
            <field name="res_model">clinic.audit.log</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clinic_audit_log_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No audit logs found
                </p>
                <p>
                    Audit logs track all changes to critical records in the system.
                </p>
            </field>
        </record>
    </data>
</odoo>