<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Categories -->
        <record id="module_category_clinic" model="ir.module.category">
            <field name="name">Clinic Management</field>
            <field name="sequence">10</field>
        </record>

        <!-- Groups -->
        <record id="group_clinic_base_user" model="res.groups">
            <field name="name">Clinic User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_clinic_base_manager" model="res.groups">
            <field name="name">Clinic Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_clinic_base_user'))]"/>
        </record>

        <record id="group_clinic_base_admin" model="res.groups">
            <field name="name">Clinic Administrator</field>
            <field name="implied_ids" eval="[(4, ref('group_clinic_base_manager'))]"/>
            <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>