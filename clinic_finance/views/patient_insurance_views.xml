<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Patient Insurance List View -->
    <record id="view_clinic_patient_insurance_tree" model="ir.ui.view">
        <field name="name">clinic.patient.insurance.list</field>
        <field name="model">clinic.patient.insurance</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="insurance_company_id"/>
                <field name="policy_number"/>
                <field name="policy_type"/>
                <field name="is_primary"/>
                <field name="effective_date"/>
                <field name="expiry_date"/>
                <field name="verification_status"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <!-- Extend Patient Form View to Add Insurance Tab -->
    <record id="view_clinic_patient_form_insurance" model="ir.ui.view">
        <field name="name">clinic.patient.form.insurance</field>
        <field name="model">clinic.patient</field>
        <field name="inherit_id" ref="clinic_patient.view_clinic_patient_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='family']" position="after">
                <page string="Insurance" name="insurance">
                    <field name="insurance_ids"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
