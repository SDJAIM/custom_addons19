<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Clinic Invoice Tree View -->
    <record id="view_clinic_invoice_tree" model="ir.ui.view">
        <field name="name">clinic.invoice.tree</field>
        <field name="model">clinic.invoice</field>
        <field name="arch" type="xml">
            <tree string="Clinic Invoices" decoration-info="state == 'draft'" decoration-warning="state == 'posted'" decoration-success="state == 'paid'">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="partner_id"/>
                <field name="billing_type"/>
                <field name="insurance_policy_id"/>
                <field name="invoice_date"/>
                <field name="amount_total" widget="monetary"/>
                <field name="patient_amount" widget="monetary"/>
                <field name="insurance_amount" widget="monetary"/>
                <field name="state" widget="badge"/>
                <field name="claim_count"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Clinic Invoice Form View -->
    <record id="view_clinic_invoice_form" model="ir.ui.view">
        <field name="name">clinic.invoice.form</field>
        <field name="model">clinic.invoice</field>
        <field name="arch" type="xml">
            <form string="Clinic Invoice">
                <header>
                    <button name="action_post" string="Post" type="object"
                            states="draft" class="btn-primary"
                            confirm="Are you sure you want to post this invoice?"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            states="draft,posted"/>
                    <button name="action_draft" string="Reset to Draft" type="object"
                            states="cancel"/>
                    <button name="action_view_claims" string="View Claims" type="object"
                            class="btn-secondary" attrs="{'invisible': [('claim_count', '=', 0)]}"/>
                    <button name="action_collect_copay" string="Collect Copay" type="object"
                            class="btn-warning" attrs="{'invisible': ['|', ('copay_amount', '=', 0), ('copay_collected', '=', True)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_claims" type="object"
                                class="oe_stat_button" icon="fa-file-text-o">
                            <field name="claim_count" widget="statinfo" string="Claims"/>
                        </button>
                        <button name="action_view_appointments" type="object"
                                class="oe_stat_button" icon="fa-calendar">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Appointments</span>
                            </div>
                        </button>
                    </div>

                    <group>
                        <group name="patient_info">
                            <field name="patient_id" required="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="doctor_id"/>
                            <field name="clinic_location_id"/>
                            <field name="primary_appointment_id"/>
                        </group>
                        <group name="billing_info">
                            <field name="billing_type"/>
                            <field name="insurance_policy_id"
                                   attrs="{'invisible': [('billing_type', 'not in', ['insurance', 'insurance_cash'])],
                                           'required': [('billing_type', 'in', ['insurance', 'insurance_cash'])]}"/>
                            <field name="prior_authorization"
                                   attrs="{'invisible': [('billing_type', 'not in', ['insurance', 'insurance_cash'])]}"/>
                            <field name="copay_amount"
                                   attrs="{'invisible': [('billing_type', '!=', 'insurance_cash')]}"/>
                            <field name="copay_collected"
                                   attrs="{'invisible': [('copay_amount', '=', 0)]}"/>
                        </group>
                    </group>

                    <group>
                        <group name="invoice_info">
                            <field name="name"/>
                            <field name="invoice_date"/>
                            <field name="invoice_origin"/>
                            <field name="move_type" invisible="1"/>
                        </group>
                        <group name="amounts">
                            <field name="amount_total" widget="monetary"/>
                            <field name="patient_amount" widget="monetary"/>
                            <field name="insurance_amount" widget="monetary"
                                   attrs="{'invisible': [('insurance_amount', '=', 0)]}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Service Lines" name="service_lines">
                            <field name="service_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="service_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="discount"/>
                                    <field name="subtotal" widget="monetary" readonly="1"/>
                                    <field name="is_covered"/>
                                    <field name="appointment_id"/>
                                    <field name="doctor_id"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Invoice Lines" name="invoice_lines">
                            <field name="invoice_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price_unit" widget="monetary"/>
                                    <field name="discount"/>
                                    <field name="price_subtotal" widget="monetary" readonly="1"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Diagnoses" name="diagnoses">
                            <group>
                                <field name="primary_diagnosis_id"/>
                            </group>
                            <field name="diagnosis_ids">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Other Info" name="other_info">
                            <group>
                                <field name="narration" nolabel="1" placeholder="Internal notes..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Clinic Invoice Search View -->
    <record id="view_clinic_invoice_search" model="ir.ui.view">
        <field name="name">clinic.invoice.search</field>
        <field name="model">clinic.invoice</field>
        <field name="arch" type="xml">
            <search string="Search Clinic Invoices">
                <field name="name" string="Invoice Number"/>
                <field name="patient_id" string="Patient"/>
                <field name="doctor_id" string="Doctor"/>
                <field name="partner_id" string="Customer"/>
                <field name="insurance_policy_id" string="Insurance Policy"/>
                <separator/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="posted" string="Posted" domain="[('state', '=', 'posted')]"/>
                <filter name="paid" string="Paid" domain="[('state', '=', 'paid')]"/>
                <separator/>
                <filter name="cash" string="Cash/Self-Pay" domain="[('billing_type', '=', 'cash')]"/>
                <filter name="insurance" string="Insurance" domain="[('billing_type', 'in', ['insurance', 'insurance_cash'])]"/>
                <separator/>
                <filter name="this_month" string="This Month"
                        domain="[('invoice_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d')),
                                 ('invoice_date', '&lt;', ((context_today().replace(day=1) + relativedelta(months=1)).strftime('%Y-%m-%d')))]"/>
                <group expand="0" string="Group By">
                    <filter name="group_patient" string="Patient" context="{'group_by': 'patient_id'}"/>
                    <filter name="group_doctor" string="Doctor" context="{'group_by': 'doctor_id'}"/>
                    <filter name="group_billing_type" string="Billing Type" context="{'group_by': 'billing_type'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_date" string="Invoice Date" context="{'group_by': 'invoice_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Clinic Invoices -->
    <record id="action_clinic_invoice" model="ir.actions.act_window">
        <field name="name">Clinic Invoices</field>
        <field name="res_model">clinic.invoice</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_clinic_invoice_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first clinic invoice
            </p>
            <p>
                Create invoices for patient services with integrated insurance billing.
            </p>
        </field>
    </record>

</odoo>