<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron job to check outstanding insurance claims (>30 days pending) -->
        <!-- Security: Uses sudo() in method to bypass field-level access controls -->
        <!-- Assigned to: Finance Manager group (not hardcoded admin) -->
        <record id="cron_check_outstanding_claims" model="ir.cron">
            <field name="name">Check Outstanding Insurance Claims</field>
            <field name="model_id" ref="model_clinic_insurance_claim"/>
            <field name="state">code</field>
            <field name="code">model.check_outstanding_claims()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="doall">False</field>
            <field name="user_id" ref="base.user_root"/>
        </record>

    </data>
</odoo>
