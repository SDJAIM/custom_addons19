<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Room Tree View -->
    <record id="view_clinic_room_tree" model="ir.ui.view">
        <field name="name">clinic.room.tree</field>
        <field name="model">clinic.room</field>
        <field name="arch" type="xml">
            <list string="Rooms"
                  decoration-success="status=='available'"
                  decoration-warning="status in ['cleaning','reserved']"
                  decoration-danger="status in ['out_of_service','maintenance']"
                  decoration-info="status=='occupied'">
                <field name="code"/>
                <field name="name"/>
                <field name="branch_id"/>
                <field name="room_type"/>
                <field name="floor" optional="show"/>
                <field name="capacity"/>
                <field name="status"/>
                <field name="utilization_rate" widget="percentage" optional="show"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Room Form View -->
    <record id="view_clinic_room_form" model="ir.ui.view">
        <field name="name">clinic.room.form</field>
        <field name="model">clinic.room</field>
        <field name="arch" type="xml">
            <form string="Room">
                <header>
                    <button name="action_set_available" type="object" string="Set Available"
                           class="btn-success" invisible="status == 'available'"/>
                    <button name="action_set_maintenance" type="object" string="Schedule Maintenance"
                           invisible="status == 'maintenance'"/>
                    <button name="action_clean_room" type="object" string="Mark for Cleaning"
                           invisible="status == 'cleaning'"/>
                    <field name="status" widget="statusbar"
                          statusbar_visible="available,occupied,cleaning"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_appointments" type="object"
                               class="oe_stat_button" icon="fa-calendar">
                            <field name="appointment_count" widget="statinfo" string="Appointments"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-chart-line">
                            <field name="utilization_rate" widget="statinfo" string="Utilization %"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Out of Service"
                           invisible="status != 'out_of_service'"/>
                    <widget name="web_ribbon" title="Maintenance" bg_color="bg-warning"
                           invisible="status != 'maintenance'"/>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Room Name"/>
                        </h1>
                        <field name="code" placeholder="Room Code" class="oe_inline"/>
                    </div>

                    <group>
                        <group string="General Information">
                            <field name="branch_id" options="{'no_create': True}"/>
                            <field name="room_type"/>
                            <field name="floor"/>
                            <field name="capacity"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Medical Features">
                            <field name="is_sterile" widget="boolean_toggle"/>
                            <field name="has_oxygen" widget="boolean_toggle"/>
                            <field name="has_suction" widget="boolean_toggle"/>
                            <field name="has_monitoring" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Schedule &amp; Availability" name="schedule">
                            <group>
                                <group string="Resource Settings">
                                    <field name="resource_id" readonly="1"/>
                                    <field name="calendar_id"/>
                                </group>
                                <group string="Maintenance">
                                    <field name="last_cleaned"/>
                                    <field name="cleaning_frequency_hours" widget="float_time"/>
                                    <field name="next_maintenance"/>
                                </group>
                            </group>
                        </page>

                        <page string="Equipment" name="equipment">
                            <field name="equipment_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="equipment_type"/>
                                    <field name="model"/>
                                    <field name="serial_no"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>

                        <page string="Specializations" name="specializations">
                            <field name="specialization_ids" widget="many2many_tags"/>
                        </page>

                        <page string="Notes" name="notes">
                            <group>
                                <field name="description" nolabel="1" placeholder="Public description..."/>
                                <separator string="Internal Notes"/>
                                <field name="notes" nolabel="1" placeholder="Internal notes..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Room Kanban View -->
    <record id="view_clinic_room_kanban" model="ir.ui.view">
        <field name="name">clinic.room.kanban</field>
        <field name="model">clinic.room</field>
        <field name="arch" type="xml">
            <kanban default_group_by="branch_id" class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="room_type"/>
                <field name="branch_id"/>
                <field name="status"/>
                <field name="capacity"/>
                <field name="utilization_rate"/>
                <progressbar field="status" colors='{"available": "success", "occupied": "info", "maintenance": "warning", "out_of_service": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="badge badge-pill" t-attf-class="#{record.status.raw_value == 'available' ? 'badge-success' : (record.status.raw_value == 'occupied' ? 'badge-info' : 'badge-warning')}">
                                    <field name="status"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <i class="fa fa-building-o"/> <field name="branch_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-door-open"/> <field name="room_type"/>
                                </div>
                                <div>
                                    <i class="fa fa-users"/> Capacity: <field name="capacity"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="utilization_rate" widget="percentage"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span t-if="record.is_sterile.raw_value" class="badge badge-info" title="Sterile Room">
                                        <i class="fa fa-shield"/>
                                    </span>
                                    <span t-if="record.has_oxygen.raw_value" class="badge badge-info" title="Oxygen Supply">
                                        Oâ‚‚
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Room Search View -->
    <record id="view_clinic_room_search" model="ir.ui.view">
        <field name="name">clinic.room.search</field>
        <field name="model">clinic.room</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="branch_id"/>

                <filter name="available" string="Available" domain="[('status', '=', 'available')]"/>
                <filter name="occupied" string="Occupied" domain="[('status', '=', 'occupied')]"/>
                <filter name="maintenance" string="Maintenance" domain="[('status', '=', 'maintenance')]"/>
                <separator/>

                <filter name="sterile" string="Sterile" domain="[('is_sterile', '=', True)]"/>
                <filter name="has_oxygen" string="With Oxygen" domain="[('has_oxygen', '=', True)]"/>
                <separator/>

                <filter name="consultation" string="Consultation" domain="[('room_type', '=', 'consultation')]"/>
                <filter name="procedure" string="Procedure" domain="[('room_type', '=', 'procedure')]"/>
                <filter name="surgery" string="Surgery" domain="[('room_type', '=', 'surgery')]"/>
                <filter name="emergency" string="Emergency" domain="[('room_type', '=', 'emergency')]"/>

                <separator string="Group By"/>
                <filter name="group_branch" string="Branch" context="{'group_by': 'branch_id'}"/>
                <filter name="group_type" string="Type" context="{'group_by': 'room_type'}"/>
                <filter name="group_status" string="Status" context="{'group_by': 'status'}"/>
                <filter name="group_floor" string="Floor" context="{'group_by': 'floor'}"/>

                <searchpanel>
                    <field name="branch_id" enable_counters="1"/>
                    <field name="room_type" enable_counters="1"/>
                    <field name="status" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Room Action -->
    <record id="action_clinic_room" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">clinic.room</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_clinic_room_search"/>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No rooms configured yet!
            </p>
            <p>
                Configure medical rooms and facilities for appointment scheduling.
            </p>
        </field>
    </record>
</odoo>