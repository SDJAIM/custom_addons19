<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Module Category -->
        <record id="module_category_clinic_staff" model="ir.module.category">
            <field name="name">Clinic Staff Management</field>
            <field name="description">Manage staff and practitioners</field>
            <field name="sequence">2</field>
        </record>
        
        <!-- Privilege for groups -->
        <record id="privilege_clinic_staff" model="res.groups.privilege">
            <field name="name">Staff Management Access</field>
            <field name="category_id" ref="module_category_clinic_staff"/>
            <field name="sequence">10</field>
        </record>

        <!-- Groups -->
        <record id="group_clinic_staff_user" model="res.groups">
            <field name="name">User</field>
            <field name="privilege_id" ref="privilege_clinic_staff"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view staff records and schedules</field>
        </record>
        
        <record id="group_clinic_staff_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="privilege_id" ref="privilege_clinic_staff"/>
            <field name="implied_ids" eval="[(4, ref('group_clinic_staff_user'))]"/>
            <field name="comment">Can manage staff records and schedules</field>
        </record>
        
        <record id="group_clinic_staff_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="privilege_id" ref="privilege_clinic_staff"/>
            <field name="implied_ids" eval="[(4, ref('group_clinic_staff_manager'))]"/>
            <field name="comment">Full access to staff management</field>
        </record>
        
        <!-- Record Rules -->
        
        <!-- Staff can view their own record -->
        <record id="staff_own_record_rule" model="ir.rule">
            <field name="name">Staff: Own Record</field>
            <field name="model_id" ref="model_clinic_staff"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Staff Users can view all active staff -->
        <record id="staff_user_rule" model="ir.rule">
            <field name="name">Staff User: Active Staff</field>
            <field name="model_id" ref="model_clinic_staff"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_clinic_staff_user'))]"/>
        </record>
        
        <!-- Staff Managers can see all staff -->
        <record id="staff_manager_rule" model="ir.rule">
            <field name="name">Staff Manager: All Staff</field>
            <field name="model_id" ref="model_clinic_staff"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_clinic_staff_manager'))]"/>
        </record>
    </data>
</odoo>