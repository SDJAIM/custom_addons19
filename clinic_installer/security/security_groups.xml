<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Module Category -->
        <record id="module_category_clinic_installer" model="ir.module.category">
            <field name="name">Clinic Installer</field>
            <field name="description">Installation and configuration management</field>
            <field name="sequence">1</field>
        </record>

        <!-- Privilege for groups -->
        <record id="privilege_clinic_installer" model="res.groups.privilege">
            <field name="name">Installer Access</field>
            <field name="description">Access level for installer management</field>
            <field name="placeholder">No access</field>
            <field name="sequence">10</field>
            <field name="category_id" ref="module_category_clinic_installer"/>
        </record>

        <!-- Clinic Installer Security Groups -->
        <record id="group_clinic_installer_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="privilege_id" ref="privilege_clinic_installer"/>
            <field name="comment">Can install and configure clinic system components</field>
            <field name="implied_ids" eval="[(4, ref('base.group_system'))]"/>
        </record>
        
        <record id="group_clinic_installer_user" model="res.groups">
            <field name="name">User</field>
            <field name="privilege_id" ref="privilege_clinic_installer"/>
            <field name="comment">Can view installation status and progress</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Security Rules -->
        <record id="clinic_installer_admin_rule" model="ir.rule">
            <field name="name">Clinic Installer: Admin Access</field>
            <field name="model_id" ref="model_clinic_installer"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_clinic_installer_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <record id="clinic_installer_user_rule" model="ir.rule">
            <field name="name">Clinic Installer: User Read Access</field>
            <field name="model_id" ref="model_clinic_installer"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_clinic_installer_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Wizard Security Rules -->
        <record id="clinic_installer_wizard_admin_rule" model="ir.rule">
            <field name="name">Clinic Installer Wizard: Admin Access</field>
            <field name="model_id" ref="model_clinic_installer_wizard"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_clinic_installer_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
    </data>
</odoo>