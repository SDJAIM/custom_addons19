<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Configuration Parameters -->
        <record id="config_param_installation_version" model="ir.config_parameter">
            <field name="key">clinic_installer.version</field>
            <field name="value">2.0.0</field>
        </record>
        
        <record id="config_param_auto_backup" model="ir.config_parameter">
            <field name="key">clinic_installer.auto_backup</field>
            <field name="value">false</field>
        </record>
        
        <record id="config_param_safe_mode" model="ir.config_parameter">
            <field name="key">clinic_installer.safe_mode</field>
            <field name="value">true</field>
        </record>
        
        <!-- Email Template for Installation Completion -->
        <record id="email_template_installation_complete" model="mail.template">
            <field name="name">Clinic Installation Complete</field>
            <field name="subject">Your Clinic System is Ready!</field>
            <field name="email_from">noreply@clinic.local</field>
            <field name="body_html"><![CDATA[
                <div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
                    <div style="background: #667eea; color: white; padding: 30px; text-align: center;">
                        <h1 style="margin: 0; font-size: 28px;">Clinic System Installed!</h1>
                        <p style="margin: 10px 0 0 0; font-size: 16px;">Your clinic management system is now ready to use</p>
                    </div>
                    
                    <div style="padding: 30px; background: #f8f9fa;">
                        <h2 style="color: #333; margin-top: 0;">Installation Summary</h2>
                        <ul style="color: #666; line-height: 1.8;">
                            <li>Patient Management System</li>
                            <li>Staff and Appointment Scheduling</li>
                            <li>Treatment and Prescription Management</li>
                            <li>Billing and Insurance Processing</li>
                            <li>Reports and Analytics Dashboard</li>
                        </ul>
                        
                        <div style="text-align: center; margin: 30px 0;">
                            <a href="/web" style="background: #007bff; color: white; padding: 12px 24px; text-decoration: none; border-radius: 5px; display: inline-block;">
                                Access Your Clinic System
                            </a>
                        </div>
                    </div>
                </div>
            ]]></field>
        </record>
        
    </data>
</odoo>