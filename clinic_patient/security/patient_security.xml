<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Module Category -->
        <record id="module_category_clinic_patient" model="ir.module.category">
            <field name="name">Clinic Patient Management</field>
            <field name="description">Manage patient records and information</field>
            <field name="sequence">1</field>
        </record>

        <!-- Privilege for patient groups -->
        <record id="privilege_clinic_patient" model="res.groups.privilege">
            <field name="name">Patient Access</field>
            <field name="description">Access level for patient management</field>
            <field name="placeholder">No access</field>
            <field name="sequence">10</field>
            <field name="category_id" ref="module_category_clinic_patient"/>
        </record>

        <!-- Groups -->
        <record id="group_clinic_patient_user" model="res.groups">
            <field name="name">User</field>
            <field name="privilege_id" ref="privilege_clinic_patient"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view patient records</field>
        </record>

        <record id="group_clinic_patient_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="privilege_id" ref="privilege_clinic_patient"/>
            <field name="implied_ids" eval="[(4, ref('group_clinic_patient_user'))]"/>
            <field name="comment">Can create and edit patient records</field>
        </record>

        <record id="group_clinic_patient_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="privilege_id" ref="privilege_clinic_patient"/>
            <field name="implied_ids" eval="[(4, ref('group_clinic_patient_manager'))]"/>
            <field name="comment">Full access to patient management</field>
        </record>
        
        <!-- Record Rules -->
        
        <!-- Portal users can only see their own patient record -->
        <record id="patient_portal_rule" model="ir.rule">
            <field name="name">Portal: Own Patient Record</field>
            <field name="model_id" ref="model_clinic_patient"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Portal users can see their family members -->
        <record id="patient_family_portal_rule" model="ir.rule">
            <field name="name">Portal: Own Family Members</field>
            <field name="model_id" ref="model_clinic_patient_family"/>
            <field name="domain_force">[('patient_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Portal users can see their insurance -->
        <record id="patient_insurance_portal_rule" model="ir.rule">
            <field name="name">Portal: Own Insurance</field>
            <field name="model_id" ref="model_clinic_patient_insurance"/>
            <field name="domain_force">[('patient_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Patient Users can only see active patients -->
        <record id="patient_user_active_rule" model="ir.rule">
            <field name="name">Patient User: Active Patients Only</field>
            <field name="model_id" ref="model_clinic_patient"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_clinic_patient_user'))]"/>
        </record>
        
        <!-- Patient Managers can see all patients -->
        <record id="patient_manager_all_rule" model="ir.rule">
            <field name="name">Patient Manager: All Patients</field>
            <field name="model_id" ref="model_clinic_patient"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_clinic_patient_manager'))]"/>
        </record>
    </data>
</odoo>