<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job for sending pending WhatsApp messages -->
        <record id="ir_cron_send_whatsapp_messages" model="ir.cron">
            <field name="name">WhatsApp: Send Pending Messages</field>
            <field name="model_id" ref="model_clinic_whatsapp_message"/>
            <field name="state">code</field>
            <field name="code">model.send_pending_messages()</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron job for appointment reminders (delegated to appointment model) -->
        <record id="ir_cron_whatsapp_appointment_reminders" model="ir.cron">
            <field name="name">Appointments: Send Reminders (WhatsApp/SMS/Email)</field>
            <field name="model_id" ref="clinic_appointment_core.model_clinic_appointment"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_appointment_reminders()</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron job for retry failed messages -->
        <record id="ir_cron_retry_failed_whatsapp" model="ir.cron">
            <field name="name">WhatsApp: Retry Failed Messages</field>
            <field name="model_id" ref="model_clinic_whatsapp_message"/>
            <field name="state">code</field>
            <field name="code">model.retry_failed_messages()</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron job for cleaning old messages -->
        <record id="ir_cron_clean_old_whatsapp_messages" model="ir.cron">
            <field name="name">WhatsApp: Clean Old Messages</field>
            <field name="model_id" ref="model_clinic_whatsapp_message"/>
            <field name="state">code</field>
            <field name="code">model.clean_old_messages(days=90)</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall">2025-11-12 02:00:00</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron job for syncing templates from Meta (Fase 2.1) -->
        <record id="ir_cron_sync_whatsapp_templates" model="ir.cron">
            <field name="name">WhatsApp: Sync Templates from Meta</field>
            <field name="model_id" ref="model_clinic_whatsapp_template"/>
            <field name="state">code</field>
            <field name="code">model.sync_templates_from_meta()</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>