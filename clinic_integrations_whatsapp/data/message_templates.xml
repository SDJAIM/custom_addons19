<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- TASK-F1-009: WhatsApp Templates with Variable Substitution -->

        <!-- Appointment Reminder Template -->
        <record id="whatsapp_template_appointment_reminder" model="clinic.whatsapp.template">
            <field name="name">Appointment Reminder</field>
            <field name="template_name">appointment_reminder_v1</field>
            <field name="template_type">appointment_reminder</field>
            <field name="language_code">en</field>
            <field name="message_body">Hi {{1}}, reminder about your appointment on {{2}} at {{3}} with {{4}}.

Type: {{5}}
Location: {{6}}

Please arrive 15 minutes early. Reply CONFIRM or CANCEL.

Ref: {{7}}</field>
            <field name="footer">Thank you for choosing our clinic</field>
            <field name="active">True</field>
            <field name="approval_status">draft</field>
        </record>

        <!-- Appointment Confirmation Template -->
        <record id="whatsapp_template_appointment_confirmation" model="clinic.whatsapp.template">
            <field name="name">Appointment Confirmation</field>
            <field name="template_name">appointment_confirmation_v1</field>
            <field name="template_type">appointment_confirmation</field>
            <field name="language_code">en</field>
            <field name="message_body">✅ Appointment Confirmed

Hello {{1}}, your appointment is confirmed for {{2}} at {{3}}.

Doctor: {{4}}
Type: {{5}}
Location: {{6}}

Confirmation #: {{7}}

We look forward to seeing you!</field>
            <field name="footer">Reply HELP for assistance</field>
            <field name="active">True</field>
            <field name="approval_status">draft</field>
        </record>

        <!-- Medication Reminder Template -->
        <record id="whatsapp_template_prescription_reminder" model="clinic.whatsapp.template">
            <field name="name">Medication Reminder</field>
            <field name="template_name">prescription_reminder_v1</field>
            <field name="template_type">prescription_reminder</field>
            <field name="language_code">en</field>
            <field name="message_body">Hi {{1}}, reminder about your medication prescription #{{2}}.

Please check your patient portal for complete details and instructions.

For inquiries, contact us.</field>
            <field name="footer">Your health is our priority</field>
            <field name="active">True</field>
            <field name="approval_status">draft</field>
        </record>

        <!-- Medical Information Available Template (PHI-Compliant) -->
        <record id="whatsapp_template_lab_results" model="clinic.whatsapp.template">
            <field name="name">Medical Information Available</field>
            <field name="template_name">medical_info_available_v1</field>
            <field name="template_type">general</field>
            <field name="language_code">en</field>
            <field name="message_body">Dear {{1}}, new information from your visit on {{2}} is now available in your secure patient portal.

Please log in to view details. You may also pick up a copy at reception.

For help, contact us.</field>
            <field name="footer">Thank you for choosing us for your care</field>
            <field name="active">True</field>
            <field name="approval_status">draft</field>
        </record>

        <!-- Welcome Message Template -->
        <record id="whatsapp_template_welcome" model="clinic.whatsapp.template">
            <field name="name">Welcome Message</field>
            <field name="template_name">welcome_message_v1</field>
            <field name="template_type">general</field>
            <field name="language_code">en</field>
            <field name="message_body">Dear {{1}}, welcome to {{2}}!

Thank you for registering. You can now:
✓ Book appointments online
✓ Access your secure patient portal
✓ Receive reminders

For help, reply HELP.</field>
            <field name="footer">We're here for your health</field>
            <field name="active">True</field>
            <field name="approval_status">draft</field>
        </record>
    </data>
</odoo>