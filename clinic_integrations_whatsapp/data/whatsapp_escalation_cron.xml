<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Fase 5.1: Escalation Monitoring Cron Job -->

    <record id="ir_cron_monitor_whatsapp_escalations" model="ir.cron">
        <field name="name">WhatsApp: Monitor Thread Escalations</field>
        <field name="model_id" ref="model_clinic_whatsapp_thread"/>
        <field name="state">code</field>
        <field name="code">model.monitor_escalations()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active" eval="True"/>
        <field name="priority">10</field>
    </record>

</odoo>
