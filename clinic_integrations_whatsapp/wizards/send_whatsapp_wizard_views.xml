<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Send WhatsApp Wizard Form View -->
    <record id="view_clinic_send_whatsapp_wizard_form" model="ir.ui.view">
        <field name="name">clinic.send.whatsapp.wizard.form</field>
        <field name="model">clinic.send.whatsapp.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="patient_id" readonly="1" attrs="{'invisible': [('patient_id', '=', False)]}"/>
                    <field name="phone_number" required="1"/>
                    <field name="message_type"/>
                    <field name="template_id"
                           domain="[('active', '=', True), ('status', '=', 'approved')]"
                           attrs="{'required': [('message_type', '=', 'template')], 'invisible': [('message_type', '!=', 'template')]}"/>
                </group>
                <group string="Message Content" attrs="{'invisible': [('message_type', '=', 'template')]}">
                    <field name="message_body" nolabel="1" required="1" attrs="{'invisible': [('message_type', '=', 'template')]}"/>
                </group>
                <group string="Template Variables" attrs="{'invisible': [('template_id', '=', False)]}">
                    <field name="template_variables" nolabel="1">
                        <tree editable="bottom">
                            <field name="variable_name"/>
                            <field name="variable_value"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="action_send" string="Send" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Send WhatsApp Wizard -->
    <record id="action_clinic_send_whatsapp_wizard" model="ir.actions.act_window">
        <field name="name">Send WhatsApp Message</field>
        <field name="res_model">clinic.send.whatsapp.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>