<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Patient Form View to add WhatsApp fields -->
    <record id="view_clinic_patient_form_whatsapp" model="ir.ui.view">
        <field name="name">clinic.patient.form.whatsapp</field>
        <field name="model">clinic.patient</field>
        <field name="inherit_id" ref="clinic_patient.view_clinic_patient_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="WhatsApp" groups="base.group_user">
                    <group>
                        <group string="WhatsApp Settings">
                            <field name="whatsapp_opt_in"/>
                            <field name="whatsapp_number" attrs="{'required': [('whatsapp_opt_in', '=', True)]}"/>
                            <field name="whatsapp_opt_in_date" readonly="1" attrs="{'invisible': [('whatsapp_opt_in', '=', False)]}"/>
                        </group>
                        <group string="Communication Preferences">
                            <field name="receive_appointment_reminders"/>
                            <field name="receive_prescription_reminders"/>
                            <field name="receive_lab_results"/>
                            <field name="receive_promotional"/>
                        </group>
                    </group>
                    <group string="WhatsApp Messages" attrs="{'invisible': [('whatsapp_opt_in', '=', False)]}">
                        <field name="whatsapp_message_ids" nolabel="1" readonly="1">
                            <tree decoration-success="status == 'sent'" decoration-danger="status == 'failed'">
                                <field name="create_date" string="Date"/>
                                <field name="message_type"/>
                                <field name="status"/>
                                <field name="direction"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
            <!-- Add Send WhatsApp button in header -->
            <xpath expr="//header" position="inside">
                <button name="action_send_whatsapp"
                        string="Send WhatsApp"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('whatsapp_opt_in', '=', False)]}"
                        groups="base.group_user"/>
            </xpath>
        </field>
    </record>

    <!-- Add WhatsApp indicator to Patient Tree View -->
    <record id="view_clinic_patient_tree_whatsapp" model="ir.ui.view">
        <field name="name">clinic.patient.tree.whatsapp</field>
        <field name="model">clinic.patient</field>
        <field name="inherit_id" ref="clinic_patient.view_clinic_patient_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <field name="whatsapp_opt_in" string="WhatsApp" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

    <!-- Add WhatsApp filters to Patient Search View -->
    <record id="view_clinic_patient_search_whatsapp" model="ir.ui.view">
        <field name="name">clinic.patient.search.whatsapp</field>
        <field name="model">clinic.patient</field>
        <field name="inherit_id" ref="clinic_patient.view_clinic_patient_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='archived']" position="after">
                <separator/>
                <filter string="WhatsApp Opted In" name="whatsapp_opt_in" domain="[('whatsapp_opt_in', '=', True)]"/>
                <filter string="No WhatsApp" name="no_whatsapp" domain="[('whatsapp_opt_in', '=', False)]"/>
            </xpath>
        </field>
    </record>
</odoo>