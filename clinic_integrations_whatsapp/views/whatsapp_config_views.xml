<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp Configuration Tree View -->
    <record id="view_clinic_whatsapp_config_tree" model="ir.ui.view">
        <field name="name">clinic.whatsapp.config.tree</field>
        <field name="model">clinic.whatsapp.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="account_id"/>
                <field name="api_key"/>
                <field name="webhook_url"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- WhatsApp Configuration Form View -->
    <record id="view_clinic_whatsapp_config_form" model="ir.ui.view">
        <field name="name">clinic.whatsapp.config.form</field>
        <field name="model">clinic.whatsapp.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Configuration Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="API Configuration">
                            <field name="account_id" placeholder="WhatsApp Business Account ID"/>
                            <field name="api_key" password="True"/>
                            <field name="api_base_url"/>
                            <field name="webhook_url"/>
                            <field name="webhook_token" password="True"/>
                        </group>
                        <group string="Settings">
                            <field name="active"/>
                            <field name="default_country_code"/>
                            <field name="retry_attempts"/>
                            <field name="retry_delay"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Rate Limiting">
                            <group>
                                <field name="rate_limit_enabled"/>
                                <field name="rate_limit_messages" attrs="{'invisible': [('rate_limit_enabled', '=', False)]}"/>
                                <field name="rate_limit_window" attrs="{'invisible': [('rate_limit_enabled', '=', False)]}"/>
                            </group>
                        </page>
                        <page string="Logging">
                            <group>
                                <field name="log_messages"/>
                                <field name="log_errors"/>
                                <field name="debug_mode"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for WhatsApp Configuration -->
    <record id="action_clinic_whatsapp_config" model="ir.actions.act_window">
        <field name="name">WhatsApp Configurations</field>
        <field name="res_model">clinic.whatsapp.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a WhatsApp Configuration
            </p>
            <p>
                Configure your WhatsApp Business API settings here.
            </p>
        </field>
    </record>
</odoo>