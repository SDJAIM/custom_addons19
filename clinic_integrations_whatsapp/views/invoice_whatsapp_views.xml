<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Fase 4.3: WhatsApp Integration in Invoices -->

    <!-- Extend Invoice Form View -->
    <record id="view_clinic_invoice_form_whatsapp" model="ir.ui.view">
        <field name="name">clinic.invoice.form.whatsapp</field>
        <field name="model">clinic.invoice</field>
        <field name="inherit_id" ref="clinic_finance.view_clinic_invoice_form"/>
        <field name="arch" type="xml">

            <!-- Add WhatsApp button to button_box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <!-- WhatsApp Messages Count Button -->
                <button name="action_send_whatsapp_message"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-whatsapp"
                        invisible="not can_send_whatsapp"
                        help="Send WhatsApp payment reminder to patient">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="whatsapp_message_count" widget="integer"/>
                        </span>
                        <span class="o_stat_text">WhatsApp</span>
                    </div>
                </button>
            </xpath>

            <!-- Add invisible fields for computation -->
            <xpath expr="//sheet" position="inside">
                <group invisible="1">
                    <field name="whatsapp_phone"/>
                    <field name="can_send_whatsapp"/>
                </group>
            </xpath>

        </field>
    </record>

    <!-- Extend Invoice Tree View -->
    <record id="view_clinic_invoice_tree_whatsapp" model="ir.ui.view">
        <field name="name">clinic.invoice.tree.whatsapp</field>
        <field name="model">clinic.invoice</field>
        <field name="inherit_id" ref="clinic_finance.view_clinic_invoice_tree"/>
        <field name="arch" type="xml">

            <!-- Add WhatsApp icon indicator -->
            <xpath expr="//list" position="attributes">
                <attribute name="decoration-success">can_send_whatsapp</attribute>
            </xpath>

            <!-- Add can_send_whatsapp field to list for filtering -->
            <xpath expr="//list/field[@name='state']" position="after">
                <field name="can_send_whatsapp" invisible="1"/>
            </xpath>

        </field>
    </record>

    <!-- Add WhatsApp Filter to Search View -->
    <record id="view_clinic_invoice_search_whatsapp" model="ir.ui.view">
        <field name="name">clinic.invoice.search.whatsapp</field>
        <field name="model">clinic.invoice</field>
        <field name="inherit_id" ref="clinic_finance.view_clinic_invoice_search"/>
        <field name="arch" type="xml">

            <!-- Add WhatsApp filters -->
            <xpath expr="//search/filter[last()]" position="after">
                <separator/>
                <filter string="Can Send WhatsApp"
                        name="filter_can_send_whatsapp"
                        domain="[('can_send_whatsapp', '=', True)]"
                        help="Invoices where patient can receive WhatsApp"/>

                <filter string="Unpaid + WhatsApp"
                        name="filter_unpaid_whatsapp"
                        domain="[('can_send_whatsapp', '=', True), ('payment_state', 'in', ['not_paid', 'partial'])]"
                        help="Unpaid invoices where patient can receive WhatsApp reminders"/>
            </xpath>

        </field>
    </record>

    <!-- Server Action: Bulk Send WhatsApp Payment Reminders -->
    <record id="action_invoice_send_whatsapp_reminders" model="ir.actions.server">
        <field name="name">Send WhatsApp Payment Reminders</field>
        <field name="model_id" ref="clinic_finance.model_clinic_invoice"/>
        <field name="binding_model_id" ref="clinic_finance.model_clinic_invoice"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_send_payment_reminder()
        </field>
    </record>

</odoo>
