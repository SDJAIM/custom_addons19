<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="booking_request_portal_rule" model="ir.rule">
        <field name="name">Portal User: Own Booking Requests</field>
        <field name="model_id" ref="model_clinic_booking_request"/>
        <field name="domain_force">[('email', '=', user.email)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="booking_request_public_rule" model="ir.rule">
        <field name="name">Public User: Own Session Bookings</field>
        <field name="model_id" ref="model_clinic_booking_request"/>
        <field name="domain_force">[('session_id', '=', session_id)]</field>
        <field name="groups" eval="[(4, ref('base.group_public'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>