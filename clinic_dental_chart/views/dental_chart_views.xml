<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dental Chart Form View -->
    <record id="view_dental_chart_form" model="ir.ui.view">
        <field name="name">clinic.dental.chart.form</field>
        <field name="model">clinic.dental.chart</field>
        <field name="arch" type="xml">
            <form string="Dental Chart">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="create_date" string="Chart Date" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Tooth Chart">
                            <div class="o_dental_chart_container">
                                <!-- Placeholder for OWL component -->
                                <div>Interactive dental chart will be rendered here</div>
                            </div>
                        </page>
                        <page string="Treatments">
                            <field name="treatment_ids">
                                <list>
                                    <field name="description"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="clinical_notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_dental_chart_tree" model="ir.ui.view">
        <field name="name">clinic.dental.chart.tree</field>
        <field name="model">clinic.dental.chart</field>
        <field name="arch" type="xml">
            <list string="Dental Charts">
                <field name="patient_id"/>
                <field name="create_date" string="Chart Date"/>
                <field name="last_update"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dental_chart" model="ir.actions.act_window">
        <field name="name">Dental Charts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clinic.dental.chart</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu - Under Clinical submenu -->
    <menuitem id="menu_dental_chart"
        name="Dental Charts"
        parent="clinic_treatment.menu_clinic_treatment_root"
        action="action_dental_chart"
        sequence="60"/>
</odoo>
