<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Module Category -->
        <record id="module_category_clinic_dental" model="ir.module.category">
            <field name="name">Clinic Dental</field>
            <field name="description">Manage dental charts and treatments</field>
            <field name="sequence">7</field>
        </record>

        <!-- Privilege for groups -->
        <record id="privilege_clinic_dental" model="res.groups.privilege">
            <field name="name">Dental Access</field>
            <field name="category_id" ref="module_category_clinic_dental"/>
            <field name="sequence">10</field>
        </record>

        <!-- Security Groups -->
        <record id="group_dental_user" model="res.groups">
            <field name="name">User</field>
            <field name="privilege_id" ref="privilege_clinic_dental"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
        <record id="group_dentist" model="res.groups">
            <field name="name">Dentist</field>
            <field name="privilege_id" ref="privilege_clinic_dental"/>
        <field name="implied_ids" eval="[(4, ref('group_dental_user'))]"/>
    </record>
    
        <record id="group_dental_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="privilege_id" ref="privilege_clinic_dental"/>
        <field name="implied_ids" eval="[(4, ref('group_dentist'))]"/>
        </record>
    </data>
</odoo>